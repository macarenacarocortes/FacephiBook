        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado.Nombre)
        </dd>

    </dl>
</div>
<form asp-controller="Reservas" asp-action="Create" method="get">
    <input type="hidden" name="productoId" value="@Model.Id" /> <!--AÑADIR PARA CREAR RESERVA-->
    <button type="submit" class="btn btn-primary btn-sm">Reservar</button>
</form>
<div>
