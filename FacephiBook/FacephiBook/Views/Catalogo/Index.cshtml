@model IEnumerable<FacephiBook.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center"><u>Catalogo</u></h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                Cod. Receptor
            </th>
            <th>
                Sist. Operativo
            </th>
            <th>
                Relacion Aspecto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoReceptor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SistemaOperativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RelacionAspecto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                </td>
                <td>
                    <form asp-controller="#" asp-action="Index">
                        <button type="submit" class="btn btn-primary btn-sm">Reservar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>