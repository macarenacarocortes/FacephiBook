        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoReceptor)
        </dd>
        <dt class = "col-sm-2">
      Sistema Operativo
       </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SistemaOperativo)
        </dd>
        @if (Model.Antutu != null )
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Antutu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Antutu)
        </dd>}
