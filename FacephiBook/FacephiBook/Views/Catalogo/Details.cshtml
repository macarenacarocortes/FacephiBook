        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foco)
        </dd>}
        @if (Model.Gama != null)
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gama)
        </dd>}
