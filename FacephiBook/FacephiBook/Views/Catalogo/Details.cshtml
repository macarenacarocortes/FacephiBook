            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PixelFrontal)
        </dd>}
        @if (Model.PixelTrasera != null)
        {
            <dt class = "col-sm-2">
                Pixel de Cámara Trasera
            </dt>
            <dd class = "col-sm-10">
